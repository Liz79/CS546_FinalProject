<h2>sign up page</h2>
{{#if errormessage}}
<p>
    {{errormessage}}
</p>
{{/if}}
<form action="/users/signup" method="post">
    <div class="container">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <div id='name-box'>
            <label for="lastname">Last Name</label>
            <input type="text" placeholder="Last Name" name="lastname" maxlength="20" required>
            <label for="firstname">First Name</label>
            <input type="text" placeholder="First Name" name="firstname" maxlength="20" required>
        </div>
        <label for="birthdate">birthdate</label>
        <input type="date" name="birthdate" required>
        <hr>
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>

        <label for="psw-repeat"><b>Repeat Password</b></label>
        <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

        <label>
            <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
        </label>

        <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

        <div class="button-group">
            <button type="submit" class="signupbtn">Sign Up</button>
            <button type="button" class="cancelbtn" onclick="location.href='/mainpage'">Cancel</button>
        </div>
    </div>
</form>